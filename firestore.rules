rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que um usuário autenticado leia e escreva qualquer documento
    // ou subcoleção dentro de seu próprio documento de usuário.
    // A sintaxe {document=**} é um "wildcard recursivo".
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
